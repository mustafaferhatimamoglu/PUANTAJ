@{
    ViewData["Title"] = "Home";
}

<h2>Welcome, @ViewBag.UserName</h2>

@if (!string.IsNullOrEmpty(ViewBag.QRData))
{
    <p>Scanned QR Code: <strong>@ViewBag.QRData</strong></p>
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p style="color: green;"><strong>@ViewBag.Message</strong></p>
}

<a href="/Auth/Logout">Logout</a>
